@{
  Layout = "_Layout";
}

@using Clinic.Models;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3> No patients have been added </h3>
}

@foreach (Patient patient in Model)
{
<li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li>
}

<p>@Html.ActionLink("Add new patient", "Create")</p>

<p>@Html.ActionLink("Main Page", "Index", "Home")</p>